<wpfui:UiPage
    x:Class="LenovoYogaToolkit.WPF.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoYogaToolkit.WPF.Controls"
    xmlns:resources="clr-namespace:LenovoYogaToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoYogaToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.DashboardPage_Title}"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    Initialized="DashboardPage_Initialized"
    Scrollable="True"
    SizeChanged="DashboardPage_SizeChanged">

    <controls:LoadableControl
        x:Name="_loader"
        Margin="0,0,0,12"
        InidicatorMargin="0,64,0,0">
        <Grid x:Name="_content" />
    </controls:LoadableControl>

</wpfui:UiPage>
